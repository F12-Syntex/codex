{
  "name": "codex",
  "version": "0.16.1",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently --kill-others \"cross-env NODE_ENV=development yarn dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development yarn electron:compile && cross-env NODE_ENV=development electron dist-electron/main.js\"",
    "electron:build": "yarn build && yarn electron:compile && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:preview": "yarn build && yarn electron:compile && cross-env NODE_ENV=production electron dist-electron/main.js",
    "postinstall": "electron-rebuild -f -w better-sqlite3 || true"
  },
  "dependencies": {
    "@andresaya/edge-tts": "^1.8.0",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.8.3",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-colorful": "^5.6.1",
    "react-dom": "19.2.3",
    "react-resizable-panels": "^4",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.codex.app",
    "productName": "Codex",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**"
    ],
    "icon": "build/icon.png",
    "forceCodeSigning": false,
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "F12-Syntex",
      "repo": "codex"
    }
  }
}
